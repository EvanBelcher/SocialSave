<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yesand.socialsave">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SSTheme"
        tools:replace="android:theme">
        <activity android:name=".user.create.MakingGoals" />
        <activity android:name=".user.create.SignUpActivity" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".user.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".group.create.CreateAGroupActivity" />
        <activity android:name=".group.join.JoinGroupActvity" />
        <activity android:name=".settings.SettingsActivity"/>
    </application>

</manifest>