<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background= "#2980B9"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingTop="20dp"
        android:text="Points Earned: "
        android:layout_weight="1"
        android:id="@+id/points_earned_text"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 points"
        android:textColor="#fff"
        android:textSize="25dp"
        android:id="@+id/numpoints_text"
        android:layout_weight="1"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Earned: "
            android:layout_weight="1"
            android:textColor="#fff"

            android:id="@+id/cash_earned_text"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500"
            android:textSize="25dp"
            android:textColor="#fff"

            android:id="@+id/num_cash"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:src="@drawable/amazon_gift_card"
            android:id="@+id/amzn_button"
            android:scaleType="fitCenter"
            android:background="@null"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content"
            android:id="@+id/amzn_points"
            android:text="500 points"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:src="@drawable/sj_donation"
            android:scaleType="fitCenter"
            android:id="@+id/sj_hosp_button"
            android:background="@null"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content"
            android:text="250 points"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:src="@drawable/wwf_logo"
            android:id="@+id/wwf_button"
            android:scaleType="fitCenter"
            android:background="@null"

            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content"
            android:text="250 points"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>
