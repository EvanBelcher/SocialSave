<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#2980B9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/points_earned_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Points Earned: "
            android:textColor="#fff"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/numpoints_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 points"
            android:textColor="#fff"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cash_earned_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Earned: "

            android:textColor="#fff"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/num_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500"
            android:textColor="#fff"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/amzn_button"
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/amazon_gift_card"
            android:contentDescription="Amazon Gift Card"
            tools:ignore="HardcodedText"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/amzn_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="500 points"
            tools:ignore="HardcodedText"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/sj_hosp_button"
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/sj_donation"
            android:contentDescription="St. Jude's Donation"
            tools:ignore="HardcodedText"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:text="250 points"
            tools:ignore="HardcodedText"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/wwf_button"
            android:layout_width="169dp"
            android:layout_height="112dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/wwf_logo"
android:contentDescription="World Wildlife Fund Donation"
            tools:ignore="HardcodedText"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="250 points"
            tools:ignore="HardcodedText"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>
